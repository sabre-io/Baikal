{% extends "BaikalFrontendBundle:Layouts:standard.html.twig" %}

{% set pagetitle = "Calendars" %}

{% block content %}
{% embed "BaikalViewComponentsBundle:Components:pageheader.html.twig" %}
    {% set icon = "calendar" %}
    {% block header %}Calendars{% endblock %}
{% endembed %}

{% if calendars|length %}
    {% embed "BaikalViewComponentsBundle:Components:addbutton.html.twig" %}
        {% set button_url = path('baikal_frontend_calendar_form_new') %}
        {% set button_text = '<i class="fa fa-calendar"></i> Add calendar' %}
    {% endembed %}

    {% embed "BaikalViewComponentsBundle:Components:Calendar/list.html.twig" with {
        'user' : user,
        'items' : calendars,
        'urls': urls
    } %}{% endembed %}
{% else %}
    {% embed "BaikalViewComponentsBundle:Components:nothinghere.html.twig" with {
        itemname: 'calendar',
        actionurl: path('baikal_frontend_calendar_form_new'),
        calltoaction: 'Create one now'
    } %}{% endembed %}
{% endif %}

{% endblock %}

{% block scripts %}
{% embed "BaikalViewComponentsBundle:Components:list.scripts.html.twig" %}{% endembed %}
{% endblock %}
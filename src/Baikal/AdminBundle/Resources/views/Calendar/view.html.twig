{% extends "BaikalAdminBundle:Layouts:standard.html.twig" %}

{% set pagetitle = "Calendar " ~ calendar.getDisplayname() ~ " of " ~ user.uiLabel() %}

{% block content %}

    {% embed "BaikalViewComponentsBundle:Components:pageheader.html.twig" %}
        {% set icon = "group" %}
        {% block header %}
            <a href="{{ path('baikal_admin_user_list') }}">Users</a>
            
            <i class="fa fa-angle-right"></i>

            <span class="hidden-xs">{% include "BaikalViewComponentsBundle:Components:avatar.textsize.html.twig" with { email: user.email } %}</span> {{ user.uiLabel() }}

            <i class="fa fa-angle-right"></i>

            <i class="fa fa-calendar"></i> <a href="{{ path('baikal_admin_user_calendar_list', { id: user.id }) }}">Calendars</a>

            <i class="fa fa-angle-right"></i>

            {% include "BaikalViewComponentsBundle:Components:calendarpill.html.twig" with { calendar: calendar } %} {{ calendar.getDisplayname() }}
        {% endblock %}
    {% endembed %}

    {% embed "BaikalViewComponentsBundle:Components:SPA/calclient.html.twig" with {
        user: user,
        calendar: calendar,
        fullscreen: false,
        alternativeurl: path('baikal_admin_calendar_view_fullscreen', { user: user.id, calendar: calendar.id })
    } %}{% endembed %}

{% endblock %}

{% block jslibsjquery %}{% endblock %}
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            {% if app.user %}
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            {% endif %}
            <nobr><a class="navbar-brand" href="{{ path("baikal_admin_homepage") }}"><img src="{{ asset('assets/images/matriochka.svg') }}" style="height: 40px; margin-top: -10px; margin-bottom: -30px;"/> <div style="margin-left: 40px;"><span class="hidden-xxs inline-block">Ba√Økal</span> <span class="colored">Admin</span></div></a></nobr>
        </div>

        {% if app.user %}
            <div class="collapse navbar-collapse navbar-responsive-collapse">

                <div class="visible-xs">

                    <div class="pull-left" style="width: 40%">
                        {{ navbarmenu('BaikalAdminBundle:Builder:adminMenu') }}
                    </div>
                    
                    <div class="pull-right" style="width: 50%">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('baikal_admin_logout') }}"><i class="fa fa-power-off"></i> Signout</a></li>

                            {% if app.user.id is defined %}
                            <li class="divider"></li>
                            <li><a href="{{ path('baikal_admin_user_form_edit', { id: app.user.id }) }}"><i class="fa fa-smile-o"></i> My profile</a></li>
                            {% endif %}

                            {% if is_granted('ROLE_FRONTEND_USER') %}

                            <li><a href="{{ path('baikal_frontend_homepage') }}"><i class="fa fa-sign-out"></i> Switch to frontend</a></li>

                            {% endif %}
                        </ul>
                    </div>
                </div>


                <div class="visible-sm visible-md visible-lg">
                    {{ navbarmenu('BaikalAdminBundle:Builder:adminMenu') }}

                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> {% include "BaikalViewComponentsBundle:Components:avatar.textsize.html.twig" with { email: app.user.email } %} {{ app.user.getUsername() }} <b class="caret"></b></a>
                            <ul class="dropdown-menu pull-right">
                                
                                <li><a href="{{ path('baikal_admin_logout') }}"><i class="fa fa-power-off"></i> Signout</a></li>


                                {% if app.user.id is defined %}
                                <li class="divider"></li>
                                <li><a href="{{ path('baikal_admin_user_form_edit', { id: app.user.id }) }}"><i class="fa fa-smile-o"></i> My profile</a></li>
                                {% endif %}

                                {% if is_granted('ROLE_FRONTEND_USER') %}

                                <li><a href="{{ path('baikal_frontend_homepage') }}"><i class="fa fa-sign-out"></i> Switch to frontend</a></li>
                                
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
        {% endif %}
    </div>
</div>